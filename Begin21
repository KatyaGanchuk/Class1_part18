#include <iostream>
#include <cmath>
using namespace std;
int main() {
double x1,y1,x2,y2,x3,y3,a,b,c,P,p,S;
	cout << "koordunatu 1 vershuny(x1, y1)";
	cin >> x1 >> y1;
	cout << "koordunatu 2 vershuny(x2, y2) ";
	cin >> x2 >> y2;
	cout << "koordunatu 3 vershuny(x3, y3)";
	cin >> x3 >> y3;
	a = sqrt(pow((x1-x2),2)+pow((y1-y2),2));
	b = sqrt(pow((x1-x3),2)+pow((y1-y3),2));
	c = sqrt(pow((x2-x3),2)+pow((y2-y3),2));
	P = (a+b+c)/2;
	p = P/2;
	S = sqrt(p*(p-a)*(p-b)*(p-c));
	cout << "P " << P << endl;
	cout << "Ps" << S << endl;
